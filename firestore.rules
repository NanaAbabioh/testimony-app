rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Public read access to clips with "live" status
    match /clips/{clipId} {
      allow read: if resource.data.status == "live";
      allow write: if false; // Only server-side writes allowed
    }

    // Public read access to categories
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false; // Only server-side writes allowed
    }

    // Public read access to videos
    match /videos/{videoId} {
      allow read: if true;
      allow write: if false; // Only server-side writes allowed
    }

    // User saves - users can only read/write their own saves
    match /userSaves/{userId}/clips/{clipId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User profile data - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Playlists - users can only read/write their own playlists
    match /playlists/{playlistId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }

    // Admin collections - no client access
    match /admin/{document=**} {
      allow read, write: if false;
    }

    // Default deny for all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}